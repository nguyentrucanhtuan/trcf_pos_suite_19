<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View cho Lịch Sử Kiểm Kho -->
    <record id="view_trcf_inventory_check_tree" model="ir.ui.view">
        <field name="name">trcf.inventory.check.tree</field>
        <field name="model">trcf.inventory.check</field>
        <field name="arch" type="xml">
            <list string="Lịch Sử Kiểm Kho" default_order="check_date desc">
                <field name="name"/>
                <field name="check_date"/>
                <field name="location_id"/>
                <field name="user_id"/>
                <field name="template_id"/>
                <field name="total_difference_value" sum="Total Difference"/>
                <field name="loss_percentage" widget="percentage"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Form View cho Chi Tiết Phiếu Kiểm -->
    <record id="view_trcf_inventory_check_form" model="ir.ui.view">
        <field name="name">trcf.inventory.check.form</field>
        <field name="model">trcf.inventory.check</field>
        <field name="arch" type="xml">
            <form string="Chi Tiết Phiếu Kiểm Kho">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="check_date"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="location_id"/>
                            <field name="template_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Chi tiết sản phẩm" name="products">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="system_qty"/>
                                    <field name="actual_qty"/>
                                    <field name="difference_qty" 
                                           decoration-danger="difference_qty &lt; 0"
                                           decoration-success="difference_qty &gt; 0"/>
                                    <field name="product_cost" optional="hide"/>
                                    <field name="difference_value" sum="Total Value"
                                           decoration-danger="difference_value &lt; 0"
                                           decoration-success="difference_value &gt; 0"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Ghi chú bổ sung..."/>
                        </page>
                        <page string="Thống kê" name="statistics">
                            <group>
                                <group string="Giá trị tồn kho">
                                    <field name="total_system_value" widget="monetary"/>
                                    <field name="total_actual_value" widget="monetary"/>
                                    <field name="total_difference_value" widget="monetary" 
                                           decoration-danger="total_difference_value &lt; 0"
                                           decoration-success="total_difference_value &gt; 0"/>
                                </group>
                                <group string="Hao hụt">
                                    <field name="loss_percentage" widget="percentage" class="oe_inline" style="font-size: 1.5em; font-weight: bold; color: #ef4444;" invisible="loss_percentage == 0"/>
                                    <field name="loss_percentage" widget="percentage" class="oe_inline" style="font-size: 1.5em; font-weight: bold; color: #10b981;" invisible="loss_percentage != 0"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action cho Lịch Sử Kiểm Kho -->
    <record id="action_trcf_inventory_check" model="ir.actions.act_window">
        <field name="name">Lịch Sử Kiểm Kho</field>
        <field name="res_model">trcf.inventory.check</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có lịch sử kiểm kho
            </p>
            <p>
                Lịch sử kiểm kho sẽ được tạo tự động khi bạn thực hiện kiểm kho.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_trcf_inventory_check_history"
        name="Lịch Sử Kiểm Kho"
        parent="menu_trcf_inventory_template_root"
        action="action_trcf_inventory_check"
        sequence="20"/>

</odoo>
