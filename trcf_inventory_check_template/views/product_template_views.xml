<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Unhide "Upsell & Cross-Sell" group in product form to show uom_ids field -->
    <record id="product_template_form_view_uom_ids_visible" model="ir.ui.view">
        <field name="name">product.template.form.uom_ids.visible</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Make the "Upsell & Cross-Sell" group visible -->
            <xpath expr="//page[@name='sales']//group[@name='upsell']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
