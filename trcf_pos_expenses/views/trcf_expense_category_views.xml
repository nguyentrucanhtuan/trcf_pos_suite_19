<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Expense Category List View -->
    <record id="view_trcf_expense_category_list" model="ir.ui.view">
        <field name="name">trcf.expense.category.list</field>
        <field name="model">trcf.expense.category</field>
        <field name="arch" type="xml">
            <list string="Expense Categories">
                <field name="name"/>
                <field name="trcf_code"/>
                <field name="trcf_expense_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Expense Category Form View -->
    <record id="view_trcf_expense_category_form" model="ir.ui.view">
        <field name="name">trcf.expense.category.form</field>
        <field name="model">trcf.expense.category</field>
        <field name="arch" type="xml">
            <form string="Expense Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(trcf_pos_expenses.action_trcf_expense)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-money"
                                context="{'search_default_trcf_category_id': id}">
                            <field name="trcf_expense_count" widget="statinfo" string="Expenses"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Office Supplies"/>
                            <field name="trcf_code" placeholder="e.g., OFF"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="trcf_description" placeholder="Detailed description of this category..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Expense Category Search View -->
    <record id="view_trcf_expense_category_search" model="ir.ui.view">
        <field name="name">trcf.expense.category.search</field>
        <field name="model">trcf.expense.category</field>
        <field name="arch" type="xml">
            <search string="Expense Categories">
                <field name="name"/>
                <field name="trcf_code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Expense Category Action -->
    <record id="action_trcf_expense_category" model="ir.actions.act_window">
        <field name="name">Expense Categories</field>
        <field name="res_model">trcf.expense.category</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_trcf_expense_category_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense category
            </p>
            <p>
                Categories help you organize and track different types of expenses.
            </p>
        </field>
    </record>
</odoo>
