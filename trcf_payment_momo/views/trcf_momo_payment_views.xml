<odoo>
    <!-- View mở rộng POS Payment Method - Thêm cấu hình MoMo QR -->
    <record id="view_trcf_pos_payment_method_form" model="ir.ui.view">
        <field name="name">trcf.pos.payment.method.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <group invisible="use_payment_terminal != 'trcf_momo'">
                    <separator string="Cấu hình MoMo"/>
                    <field name="momo_qr_code" widget="image" 
                           class="oe_avatar"
                           options='{"size": [200, 200]}'/>
                    <div class="alert alert-info" role="alert">
                        <strong>Hướng dẫn:</strong> Mở app MoMo → Ví của tôi → Nhận tiền → 
                        Chụp màn hình hoặc tải ảnh QR và upload lên đây.
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>