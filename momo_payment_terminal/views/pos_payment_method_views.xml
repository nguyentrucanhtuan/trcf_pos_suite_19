<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_momo" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.momo</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='payment_terminal_config']" position="inside">
                <group string="MOMO Configuration" invisible="use_payment_terminal != 'momo'">
                    <field name="momo_merchant_id" required="use_payment_terminal == 'momo'"/>
                    <field name="momo_phone_number" required="use_payment_terminal == 'momo'"/>
                    <field name="momo_qr_image" widget="image" class="oe_avatar"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
