<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_trcf_printer_manager_list" model="ir.ui.view">
        <field name="name">trcf.printer.manager.list</field>
        <field name="model">trcf.printer.manager</field>
        <field name="arch" type="xml">
            <list string="Máy In" default_order="name">
                <field name="name"/>
                <field name="ip_address"/>
                <field name="port"/>
                <field name="printer_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_trcf_printer_manager_form" model="ir.ui.view">
        <field name="name">trcf.printer.manager.form</field>
        <field name="model">trcf.printer.manager</field>
        <field name="arch" type="xml">
            <form string="Thông tin máy in">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ip_address"/>
                        <field name="port"/>
                        <field name="printer_type"/>
                        <field name="active"/>
                    </group>

                    <notebook>
                        <page string="NGUỒN CHỌN ĐỂ IN" invisible="printer_type != 'label'">
                            <group>
                                <field name="printer_label_pos_preset_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>

                    <!-- Tab Options cho Kitchen Order - Chỉ hiển thị khi printer_type = 'kitchen_order_ticket' -->
                    <notebook>
                        <page string="DANH MỤC CHỌN ĐỂ IN" invisible="printer_type != 'kitchen_order_ticket'">
                            <group>
                                <field name="printer_kot_pos_category_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>

                    <notebook>
                        <page string="CHÂN TRANG HOÁ ĐƠN" invisible="printer_type != 'invoice'">
                            <group>
                                <field name="invoice_footer_text"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_trcf_printer_manager_search" model="ir.ui.view">
        <field name="name">trcf.printer.manager.search</field>
        <field name="model">trcf.printer.manager</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm máy in">
                <field name="name"/>
                <field name="ip_address"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
                <filter name="filter_inactive" string="Ngưng hoạt động" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_trcf_printer_manager" model="ir.actions.act_window">
        <field name="name">Quản lý máy in</field>
        <field name="res_model">trcf.printer.manager</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'active_test': False}</field>
        <field name="search_view_id" ref="view_trcf_printer_manager_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo máy in mới để theo dõi và cấu hình địa chỉ IP, cổng và trạng thái.
            </p>
        </field>
    </record>

</odoo>
