<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View - Group by Session -->
    <record id="view_trcf_pos_session_payment_count_tree" model="ir.ui.view">
        <field name="name">trcf.pos.session.payment.count.list</field>
        <field name="model">trcf.pos.session.payment.count</field>
        <field name="arch" type="xml">
            <list string="Payment Count Records" expand="1">
                <field name="session_id"/>
                <field name="payment_method_name"/>
                <field name="opening_amount" sum="Total Opening"/>
                <field name="income_amount" sum="Total Income"/>
                <field name="expense_amount" sum="Total Expenses"/>
                <field name="expected_amount" sum="Total Expected"/>
                <field name="counted_amount" sum="Total Counted"/>
                <field name="difference" sum="Total Difference"
                       decoration-success="difference &gt;= 0"
                       decoration-danger="difference &lt; 0"/>
                <field name="trcf_owner_withdrawal" sum="Total Withdrawal" optional="show"/>
                <field name="trcf_next_session_opening" sum="Total Next Opening" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="is_cash_pm" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_trcf_pos_session_payment_count_form" model="ir.ui.view">
        <field name="name">trcf.pos.session.payment.count.form</field>
        <field name="model">trcf.pos.session.payment.count</field>
        <field name="arch" type="xml">
            <form string="Payment Count">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="session_state" invisible="1"/>
                        <field name="is_cash_pm" invisible="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="session_id" readonly="1"/>
                            <field name="payment_method_id" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="opening_amount" readonly="session_state != 'closing_control'"/>
                            <field name="income_amount" readonly="1"/>
                            <field name="expense_amount" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="expected_amount" class="fw-bold" readonly="1"/>
                            <field name="counted_amount" class="fw-bold"
                                   readonly="session_state != 'closing_control'"/>
                        </group>
                        <group>
                            <field name="difference" class="fw-bold" readonly="1"
                                   decoration-success="difference &gt;= 0"
                                   decoration-danger="difference &lt; 0"/>
                        </group>
                    </group>
                    <group string="Phân bổ tiền mặt" invisible="not is_cash_pm">
                        <group>
                            <field name="trcf_owner_withdrawal" readonly="1"/>
                        </group>
                        <group>
                            <field name="trcf_next_session_opening" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Pivot View for Analysis -->
    <record id="view_trcf_pos_session_payment_count_pivot" model="ir.ui.view">
        <field name="name">trcf.pos.session.payment.count.pivot</field>
        <field name="model">trcf.pos.session.payment.count</field>
        <field name="arch" type="xml">
            <pivot string="Payment Count Analysis">
                <field name="payment_method_id" type="row"/>
                <field name="expected_amount" type="measure"/>
                <field name="counted_amount" type="measure"/>
                <field name="difference" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_trcf_pos_session_payment_count_graph" model="ir.ui.view">
        <field name="name">trcf.pos.session.payment.count.graph</field>
        <field name="model">trcf.pos.session.payment.count</field>
        <field name="arch" type="xml">
            <graph string="Payment Count Chart" type="bar">
                <field name="payment_method_id"/>
                <field name="expected_amount" type="measure"/>
                <field name="counted_amount" type="measure"/>
                <field name="difference" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_trcf_pos_session_payment_count" model="ir.actions.act_window">
        <field name="name">Payment Count by Session</field>
        <field name="res_model">trcf.pos.session.payment.count</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="context">{'group_by': ['session_id']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payment count records yet
            </p>
            <p>
                Payment count records are created automatically when closing POS sessions.
                Click on a session to view detailed payment methods breakdown.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_trcf_pos_session_payment_count"
              name="Payment Count by Session"
              parent="point_of_sale.menu_point_of_sale"
              action="action_trcf_pos_session_payment_count"
              sequence="20"/>

</odoo>
