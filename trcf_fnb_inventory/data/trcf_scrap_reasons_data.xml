<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scrap Reason Tags for TRCF Inventory Management -->
        
        <record id="scrap_reason_damaged" model="stock.scrap.reason.tag">
            <field name="name">Hàng hóa bị hư hỏng</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="scrap_reason_broken" model="stock.scrap.reason.tag">
            <field name="name">Hàng hóa bị rơi vỡ</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="scrap_reason_expired" model="stock.scrap.reason.tag">
            <field name="name">Hết hạn sử dụng</field>
            <field name="sequence">30</field>
        </record>
        
        <record id="scrap_reason_sales_mistake" model="stock.scrap.reason.tag">
            <field name="name">Nhầm lẫn khi bán hàng</field>
            <field name="sequence">40</field>
        </record>
        
    </data>
</odoo>
