<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_trcf_inventory" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.trcf_inventory</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Thêm vào cuối form, trước footer -->
            <xpath expr="//form" position="inside">
                <app string="TRCF Tồn kho" name="trcf_fnb_inventory">
                    <block title="Cấu hình nhập hàng" name="purchase_settings">
                        
                        <setting id="trcf_purchase_picking_type_setting" 
                                 help="Chọn loại phiếu nhập kho sẽ được sử dụng khi tạo đơn mua hàng. Kho đích sẽ được lấy từ cấu hình của loại phiếu này.">
                            <field name="trcf_purchase_picking_type_id" 
                                   placeholder="Chọn loại phiếu nhập kho..."/>
                        </setting>

                    </block>

                    <block title="Cấu hình chế biến" name="processing_settings">
                        
                        <setting id="trcf_processing_picking_type_setting" 
                                 help="Chọn loại phiếu sản xuất sẽ được sử dụng khi tạo lệnh sản xuất. Kho nguồn và kho đích sẽ được lấy từ cấu hình của loại phiếu này.">
                            <field name="trcf_processing_picking_type_id" 
                                   placeholder="Chọn loại phiếu sản xuất..."/>
                        </setting>

                    </block>
                    
                    <block title="Cấu hình huỷ hàng" name="scrap_settings">
                        
                        <setting id="trcf_scrap_location_setting" 
                                 help="Kho mà hàng sẽ được lấy ra để huỷ (ví dụ: WH/Stock)">
                            <field name="trcf_scrap_location_id" 
                                   placeholder="Chọn kho nguồn..."/>
                        </setting>
                        
                        <setting id="trcf_scrap_dest_location_setting" 
                                 help="Kho ảo để chứa hàng đã huỷ (thường là Virtual Locations/Scrap)">
                            <field name="trcf_scrap_dest_location_id" 
                                   placeholder="Chọn kho đích cho hàng huỷ..."/>
                        </setting>

                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
