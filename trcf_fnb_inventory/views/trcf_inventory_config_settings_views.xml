<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_trcf_inventory" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.trcf_inventory</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Thêm vào cuối form, trước footer -->
            <xpath expr="//form" position="inside">
                <app string="TRCF Tồn kho" name="trcf_fnb_inventory">
                    <block title="Cấu hình nhập hàng" name="purchase_settings">
                        
                        <setting id="trcf_purchase_picking_type_setting" 
                                 help="Chọn loại phiếu nhập kho sẽ được sử dụng khi tạo đơn mua hàng.">
                            <field name="trcf_purchase_picking_type_id" 
                                   placeholder="Chọn loại phiếu nhập kho..."/>
                        </setting>
                        
                        <setting id="trcf_allow_employee_select_purchase_setting"
                                 string="Cho phép nhân viên chọn phiếu nhập kho"
                                 help="Nếu bật, nhân viên có thể chọn phiếu nhập kho. Nếu tắt, sử dụng giá trị mặc định.">
                            <field name="trcf_allow_employee_select_purchase"/>
                        </setting>

                    </block>

                    <block title="Cấu hình chế biến" name="processing_settings">
                        
                        <setting id="trcf_processing_picking_type_setting" 
                                 help="Chọn loại phiếu sản xuất sẽ được sử dụng khi tạo lệnh sản xuất.">
                            <field name="trcf_processing_picking_type_id" 
                                   placeholder="Chọn loại phiếu sản xuất..."/>
                        </setting>
                        
                        <setting id="trcf_allow_employee_select_processing_setting"
                                 string="Cho phép nhân viên chọn phiếu chế biến"
                                 help="Nếu bật, nhân viên có thể chọn phiếu chế biến. Nếu tắt, sử dụng giá trị mặc định.">
                            <field name="trcf_allow_employee_select_processing"/>
                        </setting>

                    </block>
                    
                    <block title="Cấu hình huỷ hàng" name="scrap_settings">
                        
                        <setting id="trcf_scrap_location_setting" 
                                 help="Kho mà hàng sẽ được lấy ra để huỷ (ví dụ: WH/Stock)">
                            <field name="trcf_scrap_location_id" 
                                   placeholder="Chọn kho nguồn..."/>
                        </setting>
                        
                        <setting id="trcf_scrap_dest_location_setting" 
                                 help="Kho ảo để chứa hàng đã huỷ (thường là Virtual Locations/Scrap)">
                            <field name="trcf_scrap_dest_location_id" 
                                   placeholder="Chọn kho đích cho hàng huỷ..."/>
                        </setting>
                        
                        <setting id="trcf_allow_employee_select_scrap_setting"
                                 string="Cho phép nhân viên chọn kho huỷ hàng"
                                 help="Nếu bật, nhân viên có thể chọn kho nguồn và kho ảo. Nếu tắt, sử dụng giá trị mặc định.">
                            <field name="trcf_allow_employee_select_scrap"/>
                        </setting>

                    </block>
                    
                    <block title="Cấu hình chuyển kho" name="transfer_settings">
                        
                        <setting id="trcf_transfer_source_location_setting" 
                                 help="Kho nguồn mặc định khi tạo phiếu chuyển kho">
                            <field name="trcf_transfer_source_location_id" 
                                   placeholder="Chọn kho nguồn..."/>
                        </setting>
                        
                        <setting id="trcf_transfer_dest_location_setting" 
                                 help="Kho đích mặc định khi tạo phiếu chuyển kho">
                            <field name="trcf_transfer_dest_location_id" 
                                   placeholder="Chọn kho đích..."/>
                        </setting>
                        
                        <setting id="trcf_allow_employee_select_transfer_setting"
                                 string="Cho phép nhân viên chọn kho chuyển"
                                 help="Nếu bật, nhân viên có thể chọn kho nguồn và kho đích. Nếu tắt, sử dụng giá trị mặc định.">
                            <field name="trcf_allow_employee_select_transfer"/>
                        </setting>

                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
