<odoo>
    <data>
        <record id="trcf_daily_report_controller_action" model="ir.actions.act_url">
            <field name="name">Báo cáo Hàng ngày</field>
            <field name="url">/trcf_fnb_inventory/daily_report</field>
            <field name="target">self</field>
        </record>

        <!-- Settings Action -->
        <record id="trcf_inventory_config_settings_action" model="ir.actions.act_window">
            <field name="name">Cấu hình</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context" eval="{'module': 'trcf_fnb_inventory'}"/>
        </record>

        <menuitem id="trcf_fnb_inventory_root_menu"
            name="TRCF Tồn kho"
            sequence="10" /> 
        
        <menuitem id="trcf_daily_report_menu"
            name="Báo cáo Hàng ngày"
            parent="trcf_fnb_inventory_root_menu"
            action="trcf_daily_report_controller_action"
            sequence="1" />
        
        <!-- Settings Menu -->
        <menuitem id="trcf_inventory_settings_menu"
            name="Cấu hình"
            parent="trcf_fnb_inventory_root_menu"
            action="trcf_inventory_config_settings_action"
            sequence="100"
            groups="base.group_system"/>
    </data>
</odoo>