<odoo>
    <template id="check_inventory_list_template">

        <xpath expr="//head" position="inside">
            <meta charset="utf-8"/>
            <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
            <title>Nhập hàng</title>
            <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&amp;display=swap" rel="stylesheet"/>
            <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
            <script>
                tailwind.config = {
                    darkMode: "class",
                    theme: {
                        extend: {
                            colors: {
                                primary: '#2563eb',
                                'primary-light': '#eff6ff',
                                'primary-dark': '#1e40af',
                                'background-light': '#f8fafc',
                                'background-dark': '#020617',
                                'text-light-primary': '#1e293b',
                                'text-light-secondary': '#64748b',
                                'text-dark-primary': '#f8fafc',
                                'text-dark-secondary': '#94a3b8',
                                'border-light': '#e2e8f0',
                                'border-dark': '#1e293b',
                            },
                            fontFamily: {
                                "display": ["Inter", "sans-serif"]
                            },
                            borderRadius: {
                                "DEFAULT": "0.5rem",
                                "lg": "0.75rem",
                                "xl": "1rem",
                                "full": "9999px"
                            },
                        },
                    },
                }
            </script>
            <style>
                body {
                    font-family: 'Inter', sans-serif;
                }
                .material-symbols-outlined {
                    font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
                }
            </style>
        </xpath>

        <xpath expr="//body" position="replace">

            <body class="font-display bg-background-light dark:bg-background-dark">
                <div class="flex min-h-screen">
                    <!-- SideNavBar -->
                    <t t-call="trcf_fnb_inventory.sidebar_layout_template"/>

                    <!-- Main Content -->
                    <main class="flex-1 p-8">
                        <div class="w-full max-w-screen mx-auto">
                            <header class="mb-6">
                                <p class="text-text-light-primary dark:text-text-dark-primary text-4xl font-black leading-tight tracking-[-0.033em]">Lịch Sử Kiểm Kho</p>
                            </header>
                            <div class="flex flex-wrap items-center justify-between gap-4 mb-4 p-4 bg-white dark:bg-slate-900 rounded-xl border border-border-light dark:border-border-dark">
                                <a href="/trcf_fnb_inventory/check_inventory_add" class="inline-block">
                                    <button class="flex items-center justify-center gap-x-2 h-10 px-4 rounded-lg bg-primary hover:bg-primary-dark dark:bg-primary dark:hover:bg-blue-700 text-white dark:text-white transition-colors text-sm font-bold">
                                        <span class="material-symbols-outlined text-base">add_circle</span>
                                        <span>Tạo Phiếu Kiểm Mới</span>
                                    </button>
                                </a>
                            </div>
                            
                            <div class="overflow-hidden rounded-xl border border-border-light dark:border-border-dark bg-white dark:bg-slate-900">
                                <div class="overflow-x-auto">
                                    <table class="w-full text-left">
                                        <thead class="bg-slate-50 dark:bg-slate-800/50">
                                            <tr>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">Mã phiếu</th>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">Người kiểm</th>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">Thời gian</th>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">Kho</th>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">Trạng thái</th>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">Chênh lệch</th>
                                                <th class="px-6 py-4 text-left text-text-light-secondary dark:text-text-dark-secondary text-sm font-semibold leading-normal">% Hao hụt</th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-border-light dark:divide-border-dark">
                                            <t t-if="not checks">
                                                <tr>
                                                    <td colspan="7" class="px-6 py-8 text-center text-text-light-secondary dark:text-text-dark-secondary">
                                                        <div class="flex flex-col items-center gap-2">
                                                            <span class="material-symbols-outlined text-4xl">inventory_2</span>
                                                            <p>Chưa có lịch sử kiểm kho</p>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-foreach="checks" t-as="check">
                                                <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                                    <td class="px-6 py-4 text-text-light-primary dark:text-white font-medium text-sm leading-normal whitespace-nowrap">
                                                        <a t-attf-href="/web#id={{check['id']}}&amp;model=trcf.inventory.check&amp;view_type=form" t-esc="check['name']" class="text-primary hover:text-primary-dark dark:text-blue-400 dark:hover:text-blue-300"/>
                                                    </td>
                                                    <td class="px-6 py-4 text-text-light-secondary dark:text-text-dark-secondary text-sm font-normal leading-normal whitespace-nowrap" t-esc="check['user_name']"/>
                                                    <td class="px-6 py-4 text-text-light-secondary dark:text-text-dark-secondary text-sm font-normal leading-normal whitespace-nowrap" t-esc="check['check_date'].strftime('%d/%m/%Y %H:%M') if check.get('check_date') else ''"/>
                                                    <td class="px-6 py-4 text-text-light-secondary dark:text-text-dark-secondary text-sm font-normal leading-normal whitespace-nowrap" t-esc="check['warehouse_name']"/>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <t t-if="check['state'] == 'done'">
                                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400">Hoàn tất</span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400">Nháp</span>
                                                        </t>
                                                    </td>
                                                    <td class="px-6 py-4 text-sm font-medium leading-normal whitespace-nowrap">
                                                        <t t-if="check['total_difference_value'] > 0">
                                                            <span class="text-green-700 dark:text-green-400">+<t t-esc="'{:,.0f}'.format(check['total_difference_value'])"/>đ</span>
                                                        </t>
                                                        <t t-elif="check['total_difference_value'] &lt; 0">
                                                            <span class="text-red-700 dark:text-red-400"><t t-esc="'{:,.0f}'.format(check['total_difference_value'])"/>đ</span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-text-light-secondary dark:text-text-dark-secondary">0đ</span>
                                                        </t>
                                                    </td>
                                                    <td class="px-6 py-4 text-sm font-medium leading-normal whitespace-nowrap">
                                                        <t t-if="check['loss_percentage'] > 0">
                                                            <span class="text-red-700 dark:text-red-400"><t t-esc="'{:.2f}'.format(check['loss_percentage'])"/>%</span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="text-green-700 dark:text-green-400">0%</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                                <nav aria-label="Table navigation" class="flex items-center justify-between p-4 border-t border-border-light dark:border-border-dark">
                                    <span class="text-sm font-normal text-text-light-secondary dark:text-text-dark-secondary">
                                        <t t-if="checks">
                                            Hiển thị <span class="font-semibold text-text-light-primary dark:text-white" t-esc="len(checks)"/> phiếu kiểm kho gần nhất
                                        </t>
                                        <t t-else="">
                                            Không có phiếu kiểm kho nào
                                        </t>
                                    </span>
                                </nav>
                            </div>
                        </div>
                    </main>
                </div>
            </body>
            
        </xpath>

    </template>
</odoo>