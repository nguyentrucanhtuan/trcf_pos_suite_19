            <t t-if="provider.code == 'trcf_momo_provider'">
                <div style="text-align:center;">
                    <img t-att-src="'https://placehold.co/200x200/EEE/31343C'" width="200" height="200"/>
                    <p>Quét mã QR MoMo để thanh toán (Tuấn Rang Cà Phê)</p>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
