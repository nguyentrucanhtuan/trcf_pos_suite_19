<odoo>
    <!-- View mở rộng Payment Provider -->
    <record id="view_trcf_payment_provider_momo_form" model="ir.ui.view">
        <field name="name">trcf.payment.provider.momo.form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='configuration']" position="inside">
                <!-- ✅ Dùng invisible thay cho attrs/t-if -->
                <group invisible="code != 'trcf_momo_provider'">
                    <separator string="Cấu hình MoMo"/>
                    <div style="text-align:center; margin: 10px 0;">
                        <img src="https://placehold.co/200x200/EEE/31343C"
                             style="width:200px;height:200px;border-radius:8px;"/>
                        <p>QR mẫu hiển thị khi thanh toán MoMo</p>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Bản ghi provider MoMo -->
    <record id="trcf_payment_provider_momo" model="payment.provider">
        <field name="name">MoMo (TRCF)</field>
        <field name="code">trcf_momo_provider</field>
        <field name="state">enabled</field>
        <field name="company_id" ref="base.main_company"/>
    </record>
</odoo>