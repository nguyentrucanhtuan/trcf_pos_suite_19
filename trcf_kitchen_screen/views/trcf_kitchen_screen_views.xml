<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="kitchen_dashboard_action" model="ir.actions.client">
        <field name="name">Kitchen Dashboard Screen</field>
        <field name="tag">kitchen_dashboard_tags</field> <!-- tag này chính là JS class -->
        <field name="target">fullscreen</field>
    </record>

    <record id="view_trcf_kitchenscreen_list" model="ir.ui.view">
        <field name="name">trcf.kitchenscreen.list</field>
        <field name="model">trcf.kitchenscreen</field>
        <field name="arch" type="xml">
            <list>
                <field name="screen_name"/>
                <field name="pos_config_id"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="view_trcf_kitchenscreen_form" model="ir.ui.view">
        <field name="name">trcf.kitchenscreen.form</field>
        <field name="model">trcf.kitchenscreen</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="screen_name"/>
                        <field name="pos_config_id"/>
                        <field name="pos_categ_ids"/>
                        <field name="is_active"/>
                    </group>
                    <button name="%(kitchen_dashboard_action)d"
                        type="action"
                        string="Mở màn hình bếp"
                        class="btn-primary"
                        />
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_trcf_kitchenscreen" model="ir.actions.act_window">
        <field name="name">Màn hình bếp</field>
        <field name="res_model">trcf.kitchenscreen</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_trcf_kitchenscreen_list"/>
    </record>

    <menuitem
        id="menu_trcf_kitchen_root"
        name="Màn hình bếp"
        parent="point_of_sale.menu_point_root"
        sequence="10"
        action="action_trcf_kitchenscreen"/>
</odoo>
 